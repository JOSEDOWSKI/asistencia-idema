<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/spinner_item_selected" />
            <stroke android:width="2dp" android:color="@color/spinner_border" />
            <corners android:radius="4dp" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/spinner_item_selected" />
            <stroke android:width="2dp" android:color="@color/spinner_border" />
            <corners android:radius="4dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/spinner_item_background" />
            <stroke android:width="1dp" android:color="@color/outline_variant" />
            <corners android:radius="4dp" />
        </shape>
    </item>
</selector>