<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Estilo base para todos los modales -->
    <style name="ModalBaseStyle">
        <item name="android:background">@drawable/modal_background</item>
        <item name="android:padding">24dp</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:elevation">8dp</item>
    </style>
    
    <!-- Estilo para tÃ­tulos de modal -->
    <style name="ModalTitleStyle">
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginBottom">20dp</item>
    </style>
    
    <!-- Estilo para descripciones de modal -->
    <style name="ModalDescriptionStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginBottom">24dp</item>
        <item name="android:alpha">0.9</item>
    </style>
    
    <!-- Estilo para botones primarios de modal -->
    <style name="ModalPrimaryButtonStyle">
        <item name="android:background">@drawable/button_primary_selector</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:layout_marginBottom">12dp</item>
        <item name="android:padding">16dp</item>
    </style>
    
    <!-- Estilo para botones secundarios de modal -->
    <style name="ModalSecondaryButtonStyle">
        <item name="android:background">@drawable/button_secondary_selector</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:layout_marginBottom">12dp</item>
        <item name="android:padding">16dp</item>
    </style>
    
    <!-- Estilo para botones de cancelar/cerrar -->
    <style name="ModalCancelButtonStyle">
        <item name="android:background">@drawable/button_cancel_selector</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:padding">16dp</item>
    </style>
</resources>
