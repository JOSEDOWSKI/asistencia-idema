<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_color">

    <!-- Header con bÃºsqueda - ESTILO ELEGANTE -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/elegant_card_background"
        android:layout_margin="16dp"
        android:padding="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ‘¥ GestiÃ³n de Empleados"
            style="@style/SoftTitle" />

        <EditText
            android:id="@+id/et_buscar_empleado"
            style="@style/ElegantEditText"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="ðŸ” Buscar por nombre, apellido o DNI..."
            android:inputType="text"
            android:layout_marginBottom="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_agregar_empleado"
                style="@style/SoftPrimaryButton"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:text="âž• Agregar"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btn_importar_empleados"
                style="@style/SoftButton"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:text="ðŸ“¥ Importar"
                android:layout_marginStart="8dp" />

        </LinearLayout>

    </LinearLayout>

    <!-- Contador de empleados -->
    <TextView
        android:id="@+id/tv_empleados_count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Total: 0 empleados"
        style="@style/HighContrastSecondaryText"
        android:gravity="center"
        android:layout_marginBottom="8dp" />

    <!-- Lista de empleados -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_empleados"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="16dp"
        android:clipToPadding="false" />

    <!-- Estado vacÃ­o -->
    <LinearLayout
        android:id="@+id/layout_empty_state"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ‘¥"
            android:textSize="64sp"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No hay empleados registrados"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/promesa_dark"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Toque 'Agregar' para registrar el primer empleado"
            style="@style/HighContrastSecondaryText"
            android:gravity="center" />

    </LinearLayout>

</LinearLayout>