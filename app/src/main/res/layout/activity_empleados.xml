<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_color">

    <!-- Header Moderno con Gradiente -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/gradient_primary"
        android:padding="24dp"
        android:elevation="4dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ‘¥ GestiÃ³n de Empleados"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:layout_marginBottom="16dp" />

        <EditText
            android:id="@+id/et_buscar_empleado"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@drawable/modern_search_background"
            android:hint="ðŸ” Buscar empleado..."
            android:textColorHint="@color/text_secondary"
            android:textColor="@color/text_primary"
            android:inputType="text"
            android:padding="16dp"
            android:drawablePadding="12dp"
            android:layout_marginBottom="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/btn_agregar_empleado"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:text="âž• Agregar Empleado"
                android:textColor="@color/promesa_green"
                android:textStyle="bold"
                android:textSize="16sp"
                android:background="@drawable/modern_white_button"
                android:layout_marginEnd="8dp"
                android:elevation="2dp" />

            <Button
                android:id="@+id/btn_importar_empleados"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:text="Eliminar"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="16sp"
                android:background="@drawable/modern_outline_button"
                android:layout_marginStart="8dp"
                android:elevation="2dp"
                android:visibility="gone" />

        </LinearLayout>

    </LinearLayout>

    <!-- Contador de empleados -->
    <TextView
        android:id="@+id/tv_empleados_count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Total: 0 empleados"
        style="@style/HighContrastSecondaryText"
        android:gravity="center"
        android:layout_marginBottom="8dp" />

    <!-- Lista de empleados -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_empleados"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="16dp"
        android:clipToPadding="false" />

    <!-- Estado vacÃ­o -->
    <LinearLayout
        android:id="@+id/layout_empty_state"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ‘¥"
            android:textSize="64sp"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No hay empleados registrados"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/promesa_dark"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Toque 'Agregar' para registrar el primer empleado"
            style="@style/HighContrastSecondaryText"
            android:gravity="center" />

    </LinearLayout>

</LinearLayout>