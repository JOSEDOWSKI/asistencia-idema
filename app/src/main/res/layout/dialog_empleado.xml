<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/modal_background"
    android:padding="24dp"
    android:layout_margin="16dp"
    android:elevation="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Información Personal -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="👤 Información Personal"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_marginBottom="20dp" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <EditText
                android:id="@+id/et_dni"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="DNI (8 dígitos)"
                android:inputType="number"
                android:maxLength="8"
                android:background="@drawable/edittext_background"
                android:padding="12dp" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <EditText
                android:id="@+id/et_nombres"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Nombres"
                android:inputType="textPersonName"
                android:background="@drawable/edittext_background"
                android:padding="12dp" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <EditText
                android:id="@+id/et_apellidos"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Apellidos"
                android:inputType="textPersonName"
                android:background="@drawable/edittext_background"
                android:padding="12dp" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp">

            <EditText
                android:id="@+id/et_area"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Área (opcional)"
                android:inputType="text"
                android:background="@drawable/edittext_background"
                android:padding="12dp" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Tipo de Horario -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="⏰ Configuración de Horario"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_marginBottom="20dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tipo de Horario"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#2C3E50"
            android:layout_marginBottom="8dp" />

        <Spinner
            android:id="@+id/spinner_tipo_horario"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/edittext_background"
            android:layout_marginBottom="16dp" />

        <!-- Horario Regular -->
        <LinearLayout
            android:id="@+id/layout_horario_regular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <EditText
                    android:id="@+id/et_hora_entrada"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:hint="Hora Entrada (HH:mm)"
                    android:inputType="time"
                    android:background="@drawable/edittext_background"
                    android:padding="12dp"
                    android:layout_marginEnd="8dp" />

                <EditText
                    android:id="@+id/et_hora_salida"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:hint="Hora Salida (HH:mm)"
                    android:inputType="time"
                    android:background="@drawable/edittext_background"
                    android:padding="12dp"
                    android:layout_marginStart="8dp" />

            </LinearLayout>

            <!-- Refrigerio -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <Switch
                    android:id="@+id/switch_refrigerio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="12dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="🍽️ Configurar Refrigerio"
                    android:textSize="16sp"
                    android:textColor="@color/white" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_refrigerio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone">

                <EditText
                    android:id="@+id/et_refrigerio_inicio"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:hint="Inicio Refrigerio"
                    android:inputType="time"
                    android:background="@drawable/edittext_background"
                    android:padding="12dp"
                    android:layout_marginEnd="8dp" />

                <EditText
                    android:id="@+id/et_refrigerio_fin"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:hint="Fin Refrigerio"
                    android:inputType="time"
                    android:background="@drawable/edittext_background"
                    android:padding="12dp"
                    android:layout_marginStart="8dp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Horario Flexible -->
        <LinearLayout
            android:id="@+id/layout_horario_flexible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="📅 El horario flexible permite configurar diferentes horarios para cada día de la semana."
                android:textSize="14sp"
                android:textColor="@color/white"
                android:alpha="0.9"
                android:layout_marginBottom="16dp" />

            <Button
                android:id="@+id/btn_config_horario_flexible"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="📅 Configurar Horario Flexible"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:background="@drawable/button_primary_selector"
                android:padding="12dp" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>