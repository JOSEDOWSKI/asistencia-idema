<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_empleado"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp"
    android:foreground="?android:attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Avatar placeholder -->
        <TextView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:text="👤"
            android:textSize="24sp"
            android:gravity="center"
            android:background="@drawable/badge_background"
            android:layout_marginEnd="16dp" />

        <!-- Información del empleado -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_nombre_empleado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nombre Completo"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/promesa_dark"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tv_dni_empleado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DNI: 12345678"
                style="@style/HighContrastSecondaryText"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tv_area_empleado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Área de trabajo"
                android:textSize="12sp"
                android:textColor="@color/text_tertiary"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_horario_empleado"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="⏰ Regular: 08:00 - 17:00"
                    android:textSize="12sp"
                    android:textColor="@color/text_secondary" />

                <TextView
                    android:id="@+id/tv_estado_empleado"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="✅ Activo"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:layout_marginStart="8dp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Botón de opciones -->
        <ImageButton
            android:id="@+id/btn_opciones_empleado"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_settings"
            android:contentDescription="Opciones del empleado"
            android:layout_gravity="center_vertical" />

    </LinearLayout>

</androidx.cardview.widget.CardView>