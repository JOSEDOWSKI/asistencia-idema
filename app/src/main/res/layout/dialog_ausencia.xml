<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/modal_background"
    android:padding="24dp"
    android:layout_margin="16dp"
    android:elevation="8dp">

    <!-- Tipo de Ausencia -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="📋 Tipo de Ausencia"
        style="@style/ModalTitleStyle"
        android:textSize="18sp" />

    <Spinner
        android:id="@+id/spinner_tipo_ausencia"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/spinner_background" />

    <!-- Motivo -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="📝 Motivo *"
        style="@style/ModalTitleStyle"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/et_motivo_ausencia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ingrese el motivo de la ausencia"
        android:inputType="text"
        android:padding="12dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/edittext_background" />

    <!-- Descripción -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="📄 Descripción (Opcional)"
        style="@style/ModalTitleStyle"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/et_descripcion_ausencia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Descripción adicional..."
        android:inputType="textMultiLine"
        android:minLines="3"
        android:maxLines="5"
        android:padding="12dp"
        android:background="@drawable/edittext_background" />

</LinearLayout>
