<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Título -->
        <TextView
            style="@style/SubtitleText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="👤 Configuración de Empleado"
            android:gravity="center"
            android:layout_marginBottom="16dp" />

        <!-- Datos básicos -->
        <TextView
            style="@style/SecondaryText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="📋 Información Personal"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/etDni"
            style="@style/FormEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="DNI (8 dígitos)"
            android:inputType="number"
            android:maxLength="8"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/etNombre"
            style="@style/FormEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombre completo"
            android:inputType="textPersonName"
            android:layout_marginBottom="16dp" />

        <!-- Tipo de horario -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/info_background">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="⏰ Tipo de Horario"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary" />

                    <TextView
                        android:id="@+id/tvTipoHorarioDescripcion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Regular: Lunes a Viernes | Flexible: Configuración por día"
                        android:textSize="12sp"
                        android:textColor="@color/text_secondary" />

                </LinearLayout>

                <Switch
                    android:id="@+id/switchTipoHorario"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:thumbTint="@color/primary_color"
                    android:trackTint="@color/outline_color"
                    android:scaleX="1.2"
                    android:scaleY="1.2"
                    android:padding="8dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Horario de trabajo -->
        <TextView
            style="@style/SecondaryText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="⏰ Horario de Trabajo"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <EditText
                android:id="@+id/etHoraEntrada"
                style="@style/FormEditText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Entrada (ej: 09:00)"
                android:inputType="time"
                android:text="09:00"
                android:layout_marginEnd="8dp" />

            <EditText
                android:id="@+id/etHoraSalida"
                style="@style/FormEditText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Salida (ej: 18:00)"
                android:inputType="time"
                android:text="18:00"
                android:layout_marginStart="8dp" />

        </LinearLayout>

        <!-- Horario Flexible por Días -->
        <LinearLayout
            android:id="@+id/layoutHorarioFlexible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_marginBottom="16dp">

            <TextView
                style="@style/SecondaryText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="📅 Configuración Individual por Día"
                android:layout_marginBottom="12dp" />

            <!-- Configuración rápida -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/info_background">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="⚡ Configuración Rápida"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:layout_marginBottom="8dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <EditText
                            android:id="@+id/etHoraEntradaBase"
                            style="@style/FormEditTextSmall"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="Entrada base"
                            android:inputType="time"
                            android:text="08:00"
                            android:layout_marginEnd="4dp" />

                        <EditText
                            android:id="@+id/etHoraSalidaBase"
                            style="@style/FormEditTextSmall"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="Salida base"
                            android:inputType="time"
                            android:text="17:00"
                            android:layout_marginStart="4dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/btnAplicarLunesViernes"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="📅 Aplicar L-V"
                            android:textSize="10sp"
                            android:padding="4dp"
                            android:layout_marginEnd="4dp"
                            android:background="@drawable/button_primary_selector" />

                        <Button
                            android:id="@+id/btnAplicarLunesSabado"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="📅 Aplicar L-S"
                            android:textSize="10sp"
                            android:padding="4dp"
                            android:layout_marginStart="4dp"
                            android:background="@drawable/button_primary_selector" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Lunes -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="12dp">

                    <TextView
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:text="📅 Lunes"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:textColor="@color/text_primary" />

                    <EditText
                        android:id="@+id/etLunesEntrada"
                        style="@style/FormEditTextSmall"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="Entrada"
                        android:inputType="time"
                        android:text="08:00"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="4dp" />

                    <EditText
                        android:id="@+id/etLunesSalida"
                        style="@style/FormEditTextSmall"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="Salida"
                        android:inputType="time"
                        android:text="17:00"
                        android:layout_marginStart="4dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Martes -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="12dp">

                    <TextView
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:text="📅 Martes"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:textColor="@color/text_primary" />

                    <EditText
                        android:id="@+id/etMartesEntrada"
                        style="@style/FormEditTextSmall"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="Entrada"
                        android:inputType="time"
                        android:text="08:00"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="4dp" />

                    <EditText
                        android:id="@+id/etMartesSalida"
                        style="@style/FormEditTextSmall"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="Salida"
                        android:inputType="time"
                        android:text="17:00"
                        android:layout_marginStart="4dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Miércoles -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="12dp">

                    <TextView
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:text="📅 Miércoles"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:textColor="@color/text_primary" />

                    <EditText
                        android:id="@+id/etMiercolesEntrada"
                        style="@style/FormEditTextSmall"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="Entrada"
                        android:inputType="time"
                        android:text="08:00"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="4dp" />

                    <EditText
                        android:id="@+id/etMiercolesSalida"
                        style="@style/FormEditTextSmall"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="Salida"
                        android:inputType="time"
                        android:text="17:00"
                        android:layout_marginStart="4dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Jueves -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="12dp">

                    <TextView
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:text="📅 Jueves"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:textColor="@color/text_primary" />

                    <EditText
                        android:id="@+id/etJuevesEntrada"
                        style="@style/FormEditTextSmall"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="Entrada"
                        android:inputType="time"
                        android:text="08:00"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="4dp" />

                    <EditText
                        android:id="@+id/etJuevesSalida"
                        style="@style/FormEditTextSmall"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="Salida"
                        android:inputType="time"
                        android:text="17:00"
                        android:layout_marginStart="4dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Viernes -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="12dp">

                    <TextView
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:text="📅 Viernes"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:textColor="@color/text_primary" />

                    <EditText
                        android:id="@+id/etViernesEntrada"
                        style="@style/FormEditTextSmall"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="Entrada"
                        android:inputType="time"
                        android:text="08:00"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="4dp" />

                    <EditText
                        android:id="@+id/etViernesSalida"
                        style="@style/FormEditTextSmall"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="Salida"
                        android:inputType="time"
                        android:text="17:00"
                        android:layout_marginStart="4dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Sábado -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="12dp">

                    <TextView
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:text="📅 Sábado"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:textColor="@color/text_primary" />

                    <EditText
                        android:id="@+id/etSabadoEntrada"
                        style="@style/FormEditTextSmall"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="Entrada"
                        android:inputType="time"
                        android:text="08:00"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="4dp" />

                    <EditText
                        android:id="@+id/etSabadoSalida"
                        style="@style/FormEditTextSmall"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="Salida"
                        android:inputType="time"
                        android:text="17:00"
                        android:layout_marginStart="4dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <!-- Configuración de refrigerio -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Encabezado de refrigerio -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <CheckBox
                        android:id="@+id/cbTieneRefrigerio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        style="@style/BodyText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="🍽️ Tiene horario de refrigerio/almuerzo"
                        android:textStyle="bold"
                        android:layout_marginStart="8dp" />

                </LinearLayout>

                <!-- Configuración de horario de refrigerio -->
                <LinearLayout
                    android:id="@+id/layoutRefrigerio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        style="@style/SecondaryText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Horario de refrigerio (este tiempo se descontará de las horas trabajadas):"
                        android:layout_marginBottom="8dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">

                        <EditText
                            android:id="@+id/etInicioRefrigerio"
                            style="@style/FormEditText"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="Inicio (ej: 13:00)"
                            android:inputType="time"
                            android:text="13:00"
                            android:layout_marginEnd="8dp" />

                        <EditText
                            android:id="@+id/etFinRefrigerio"
                            style="@style/FormEditText"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="Fin (ej: 14:00)"
                            android:inputType="time"
                            android:text="14:00"
                            android:layout_marginStart="8dp" />

                    </LinearLayout>

                    <!-- Duración calculada -->
                    <TextView
                        android:id="@+id/tvDuracionRefrigerio"
                        style="@style/SecondaryText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="⏱️ Duración: 60 minutos"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textColor="@color/primary_color" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Resumen de horas -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/background_secondary">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    style="@style/SecondaryText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="📊 Resumen de Jornada Laboral"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tvHorasTotales"
                    style="@style/BodyText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="⏰ Horario: 09:00 - 18:00 (9 horas)"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/tvHorasRefrigerio"
                    style="@style/BodyText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="🍽️ Refrigerio: No configurado"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/tvHorasTrabajadas"
                    style="@style/BodyText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="💼 Horas trabajadas: 9h 0m"
                    android:textStyle="bold"
                    android:textColor="@color/success_color" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>