<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Aplicación rápida -->
        <androidx.cardview.widget.CardView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="⚡ Aplicación Rápida"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#2C3E50"
                    android:layout_marginBottom="12dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <EditText
                        android:id="@+id/et_hora_base_entrada"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:hint="Entrada base"
                        android:inputType="time"
                        android:background="@drawable/edittext_background"
                        android:textColor="@color/text_primary"
                        android:textColorHint="@color/text_secondary"
                        android:padding="12dp"
                        android:layout_marginEnd="8dp" />

                    <EditText
                        android:id="@+id/et_hora_base_salida"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:hint="Salida base"
                        android:inputType="time"
                        android:background="@drawable/edittext_background"
                        android:textColor="@color/text_primary"
                        android:textColorHint="@color/text_secondary"
                        android:padding="12dp"
                        android:layout_marginStart="8dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_aplicar_lv"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:text="L-V"
                        android:background="@drawable/button_primary_selector"
                        android:textColor="@android:color/white"
                        android:textSize="12sp"
                        android:layout_marginEnd="4dp" />

                    <Button
                        android:id="@+id/btn_aplicar_ls"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:text="L-S"
                        android:background="@drawable/edittext_background"
                        android:textColor="#2C3E50"
                        android:textSize="12sp"
                        android:layout_marginStart="4dp" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Configuración por días -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="📅 Configuración por Días"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#2C3E50"
            android:layout_marginBottom="16dp" />

        <!-- Lunes -->
        <LinearLayout
            android:tag="layout_L"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/item_background"
            android:padding="12dp"
            android:layout_marginBottom="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <Switch
                    android:id="@+id/switch_lunes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="12dp"
                    android:checked="true" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="🌅 Lunes"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#2C3E50" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_horarios_lunes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="visible">

                <EditText
                    android:id="@+id/et_entrada_lunes"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:hint="Entrada"
                    android:text="08:00"
                    android:inputType="time"
                    android:background="@drawable/edittext_background"
                    android:textColor="@color/text_primary"
                    android:textColorHint="@color/text_secondary"
                    android:padding="8dp"
                    android:textSize="14sp"
                    android:layout_marginEnd="8dp" />

                <EditText
                    android:id="@+id/et_salida_lunes"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:hint="Salida"
                    android:text="17:00"
                    android:inputType="time"
                    android:background="@drawable/edittext_background"
                    android:textColor="@color/text_primary"
                    android:textColorHint="@color/text_secondary"
                    android:padding="8dp"
                    android:textSize="14sp"
                    android:layout_marginStart="8dp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Martes -->
        <LinearLayout
            android:tag="layout_M"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/item_background"
            android:padding="12dp"
            android:layout_marginBottom="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <Switch
                    android:id="@+id/switch_martes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="12dp"
                    android:checked="true" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="💼 Martes"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#2C3E50" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_horarios_martes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="visible">

                <EditText
                    android:id="@+id/et_entrada_martes"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:hint="Entrada"
                    android:text="08:00"
                    android:inputType="time"
                    android:background="@drawable/edittext_background"
                    android:textColor="@color/text_primary"
                    android:textColorHint="@color/text_secondary"
                    android:padding="8dp"
                    android:textSize="14sp"
                    android:layout_marginEnd="8dp" />

                <EditText
                    android:id="@+id/et_salida_martes"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:hint="Salida"
                    android:text="17:00"
                    android:inputType="time"
                    android:background="@drawable/edittext_background"
                    android:textColor="@color/text_primary"
                    android:textColorHint="@color/text_secondary"
                    android:padding="8dp"
                    android:textSize="14sp"
                    android:layout_marginStart="8dp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Miércoles -->
        <LinearLayout
            android:tag="layout_X"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/item_background"
            android:padding="12dp"
            android:layout_marginBottom="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <Switch
                    android:id="@+id/switch_miercoles"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="12dp"
                    android:checked="true" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="⚡ Miércoles"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#2C3E50" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_horarios_miercoles"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="visible">

                <EditText
                    android:id="@+id/et_entrada_miercoles"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:hint="Entrada"
                    android:text="08:00"
                    android:inputType="time"
                    android:background="@drawable/edittext_background"
                    android:textColor="@color/text_primary"
                    android:textColorHint="@color/text_secondary"
                    android:padding="8dp"
                    android:textSize="14sp"
                    android:layout_marginEnd="8dp" />

                <EditText
                    android:id="@+id/et_salida_miercoles"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:hint="Salida"
                    android:text="17:00"
                    android:inputType="time"
                    android:background="@drawable/edittext_background"
                    android:textColor="@color/text_primary"
                    android:textColorHint="@color/text_secondary"
                    android:padding="8dp"
                    android:textSize="14sp"
                    android:layout_marginStart="8dp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Jueves -->
        <LinearLayout
            android:tag="layout_J"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/item_background"
            android:padding="12dp"
            android:layout_marginBottom="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <Switch
                    android:id="@+id/switch_jueves"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="12dp"
                    android:checked="true" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="🚀 Jueves"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#2C3E50" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_horarios_jueves"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="visible">

                <EditText
                    android:id="@+id/et_entrada_jueves"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:hint="Entrada"
                    android:text="08:00"
                    android:inputType="time"
                    android:background="@drawable/edittext_background"
                    android:textColor="@color/text_primary"
                    android:textColorHint="@color/text_secondary"
                    android:padding="8dp"
                    android:textSize="14sp"
                    android:layout_marginEnd="8dp" />

                <EditText
                    android:id="@+id/et_salida_jueves"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:hint="Salida"
                    android:text="17:00"
                    android:inputType="time"
                    android:background="@drawable/edittext_background"
                    android:textColor="@color/text_primary"
                    android:textColorHint="@color/text_secondary"
                    android:padding="8dp"
                    android:textSize="14sp"
                    android:layout_marginStart="8dp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Viernes -->
        <LinearLayout
            android:tag="layout_V"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/item_background"
            android:padding="12dp"
            android:layout_marginBottom="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <Switch
                    android:id="@+id/switch_viernes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="12dp"
                    android:checked="true" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="🎉 Viernes"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#2C3E50" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_horarios_viernes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="visible">

                <EditText
                    android:id="@+id/et_entrada_viernes"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:hint="Entrada"
                    android:text="08:00"
                    android:inputType="time"
                    android:background="@drawable/edittext_background"
                    android:textColor="@color/text_primary"
                    android:textColorHint="@color/text_secondary"
                    android:padding="8dp"
                    android:textSize="14sp"
                    android:layout_marginEnd="8dp" />

                <EditText
                    android:id="@+id/et_salida_viernes"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:hint="Salida"
                    android:text="17:00"
                    android:inputType="time"
                    android:background="@drawable/edittext_background"
                    android:textColor="@color/text_primary"
                    android:textColorHint="@color/text_secondary"
                    android:padding="8dp"
                    android:textSize="14sp"
                    android:layout_marginStart="8dp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Sábado -->
        <LinearLayout
            android:tag="layout_S"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/item_background"
            android:padding="12dp"
            android:layout_marginBottom="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <Switch
                    android:id="@+id/switch_sabado"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="12dp"
                    android:checked="false" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="🌞 Sábado"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#2C3E50" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_horarios_sabado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone">

                <EditText
                    android:id="@+id/et_entrada_sabado"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:hint="Entrada"
                    android:text="08:00"
                    android:inputType="time"
                    android:background="@drawable/edittext_background"
                    android:textColor="@color/text_primary"
                    android:textColorHint="@color/text_secondary"
                    android:padding="8dp"
                    android:textSize="14sp"
                    android:layout_marginEnd="8dp" />

                <EditText
                    android:id="@+id/et_salida_sabado"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:hint="Salida"
                    android:text="17:00"
                    android:inputType="time"
                    android:background="@drawable/edittext_background"
                    android:textColor="@color/text_primary"
                    android:textColorHint="@color/text_secondary"
                    android:padding="8dp"
                    android:textSize="14sp"
                    android:layout_marginStart="8dp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Domingo -->
        <LinearLayout
            android:tag="layout_D"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/item_background"
            android:padding="12dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <Switch
                    android:id="@+id/switch_domingo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="12dp"
                    android:checked="false" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="🏠 Domingo"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#2C3E50" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_horarios_domingo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone">

                <EditText
                    android:id="@+id/et_entrada_domingo"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:hint="Entrada"
                    android:text="08:00"
                    android:inputType="time"
                    android:background="@drawable/edittext_background"
                    android:textColor="@color/text_primary"
                    android:textColorHint="@color/text_secondary"
                    android:padding="8dp"
                    android:textSize="14sp"
                    android:layout_marginEnd="8dp" />

                <EditText
                    android:id="@+id/et_salida_domingo"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:hint="Salida"
                    android:text="17:00"
                    android:inputType="time"
                    android:background="@drawable/edittext_background"
                    android:textColor="@color/text_primary"
                    android:textColorHint="@color/text_secondary"
                    android:padding="8dp"
                    android:textSize="14sp"
                    android:layout_marginStart="8dp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView>