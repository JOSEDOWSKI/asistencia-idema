<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/modal_background"
    android:padding="16dp"
    android:layout_margin="16dp"
    android:elevation="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Título -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="📥 Importar Empleados"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/promesa_dark"
            android:gravity="center"
            android:layout_marginBottom="16dp" />

        <!-- Descripción -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ingrese los datos de los empleados en formato CSV. Cada línea debe contener: DNI, Nombres, Apellidos, Hora Entrada, Hora Salida, Refrigerio Inicio, Refrigerio Fin"
            android:textSize="14sp"
            android:textColor="@color/text_secondary"
            android:gravity="center"
            android:layout_marginBottom="20dp" />

        <!-- Ejemplo -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/ios_primary_light">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="📋 Ejemplo de formato:"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="12345678,Juan,Pérez,08:00,17:00,12:00,13:00\n87654321,María,González,09:00,18:00,12:30,13:30"
                    android:textSize="12sp"
                    android:textColor="@color/text_secondary"
                    android:fontFamily="monospace"
                    android:background="@color/white"
                    android:padding="8dp"
                    android:layout_marginTop="8dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Campo de datos -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="📝 Datos de Empleados:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/promesa_dark"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/et_datos_empleados"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:hint="Pegue aquí los datos CSV de los empleados..."
            android:inputType="textMultiLine|textCapSentences"
            android:background="@drawable/edittext_background"
            android:textColor="@color/text_primary"
            android:textColorHint="@color/text_secondary"
            android:padding="16dp"
            android:textSize="14sp"
            android:gravity="top|start"
            android:scrollbars="vertical"
            android:maxLines="10"
            android:layout_marginBottom="16dp" />

        <!-- Información adicional -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="💡 Consejos:\n• Use comas para separar columnas\n• Cada empleado en una línea\n• DNI debe tener 8 dígitos\n• Horarios en formato HH:MM\n• Los campos opcionales usan valores por defecto"
            android:textSize="12sp"
            android:textColor="@color/text_secondary"
            android:background="@color/ios_primary_light"
            android:padding="12dp"
            android:layout_marginBottom="16dp" />

        <!-- Botón de ejemplo -->
        <Button
            android:id="@+id/btn_cargar_ejemplo"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="📋 Cargar Ejemplo"
            android:textSize="14sp"
            android:background="@drawable/button_secondary_selector"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="8dp" />

    </LinearLayout>

</ScrollView>
