<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Título -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="⚙️ Configuración del Sistema"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#2C3E50"
            android:layout_marginBottom="24dp" />

        <!-- Sección Modo de Lectura -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="📱 Modo de Lectura"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#2C3E50"
                    android:drawablePadding="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Seleccione el tipo de código a escanear"
                    style="@style/HighContrastSecondaryText"
                    android:layout_marginBottom="16dp" />

                <Spinner
                    android:id="@+id/spinner_modo_lectura"
                    style="@style/ModernSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:contentDescription="Seleccionar modo de lectura de códigos" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Sección Modo de Operación -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="👥 Modo de Operación"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#2C3E50"
                    android:drawablePadding="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Configurar si es puesto fijo o autoservicio"
                    style="@style/HighContrastSecondaryText"
                    android:layout_marginBottom="16dp" />

                <Spinner
                    android:id="@+id/spinner_modo_operacion"
                    style="@style/ModernSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:contentDescription="Seleccionar modo de operación del sistema" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Sección Opciones del Sistema -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="🔧 Opciones del Sistema"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#2C3E50"
                    android:layout_marginBottom="16dp" />

                <!-- Captura de Ubicación -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="📍 Captura de Ubicación (GPS)"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#2C3E50" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Registrar coordenadas GPS en cada marcación"
                            style="@style/HighContrastSecondaryText" />

                    </LinearLayout>

                    <Switch
                        android:id="@+id/switch_captura_ubicacion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <!-- Modo Offline -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="📱 Modo Offline"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#2C3E50" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Funcionar sin conexión a internet"
                            style="@style/HighContrastSecondaryText" />

                    </LinearLayout>

                    <Switch
                        android:id="@+id/switch_modo_offline"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true" />

                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Sección Confirmación de Asistencia -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="✅ Confirmación de Asistencia"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#2C3E50"
                    android:drawablePadding="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Activar modal de confirmación antes de registrar asistencia"
                    style="@style/HighContrastSecondaryText"
                    android:layout_marginBottom="16dp" />

                <Switch
                    android:id="@+id/switch_confirmacion_asistencia"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:checked="false"
                    android:text="Requerir confirmación antes de registrar"
                    android:textSize="14sp"
                    android:textColor="#2C3E50" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Sección Configuración de API -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="🌐 Configuración de API"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#2C3E50"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Endpoint del Servidor"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#2C3E50"
                    android:layout_marginBottom="8dp" />

                <EditText
                    android:id="@+id/et_api_endpoint"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:hint="https://api.ejemplo.com"
                    android:inputType="textUri"
                    android:padding="12dp"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Token de Autenticación"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#2C3E50"
                    android:layout_marginBottom="8dp" />

                <EditText
                    android:id="@+id/et_api_token"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:hint="Bearer token..."
                    android:inputType="textPassword"
                    android:padding="12dp"
                    android:layout_marginBottom="16dp" />

                <Button
                    android:id="@+id/btn_test_conexion"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="🔍 Probar Conexión"
                    android:textColor="@android:color/white"
                    android:textStyle="bold" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Sección Estado de Sincronización -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="🔄 Estado de Sincronización"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#2C3E50"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:id="@+id/tv_estado_sync"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="⏳ Cargando estado..."
                    style="@style/HighContrastSecondaryText"
                    android:layout_marginBottom="16dp" />

                <Button
                    android:id="@+id/btn_sincronizar_ahora"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="🚀 Sincronizar Ahora"
                    android:textColor="@android:color/white"
                    android:textStyle="bold" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Sección Configuración de Email -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="📧 Configuración de Email"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#2C3E50"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Configure el envío automático de reportes por email"
                    android:textSize="14sp"
                    android:textColor="#7F8C8D"
                    android:layout_marginBottom="16dp" />

                <Button
                    android:id="@+id/btn_configurar_email"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="📧 Configurar Email"
                    android:textColor="@android:color/white"
                    android:textStyle="bold" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Sección Configuración de PIN -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="🔐 Configuración de PIN"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#2C3E50"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Configure un PIN para proteger acceso a funciones sensibles"
                    android:textSize="14sp"
                    android:textColor="#7F8C8D"
                    android:layout_marginBottom="16dp" />

                <Button
                    android:id="@+id/btn_configurar_pin"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="🔐 Configurar PIN"
                    android:textColor="@android:color/white"
                    android:textStyle="bold" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Botón Guardar Configuración -->
        <Button
            android:id="@+id/btn_guardar_config"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="💾 Guardar Configuración"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="24dp" />

    </LinearLayout>
</ScrollView>