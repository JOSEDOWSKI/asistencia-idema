<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Título -->
        <TextView
            style="@style/TitleText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="⚙️ Configuración de Asistencia"
            android:layout_marginBottom="24dp" />

        <!-- Sección Tolerancia -->
        <androidx.cardview.widget.CardView
            style="@style/ModernCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    style="@style/SubtitleText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="⏰ Tolerancia de Llegada"
                    android:drawableStart="@drawable/ic_schedule"
                    android:drawablePadding="8dp" />

                <TextView
                    style="@style/SecondaryText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Minutos de tolerancia antes de considerar una llegada como tardía"
                    android:layout_marginBottom="16dp" />

                <SeekBar
                    android:id="@+id/seekBarTolerancia"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="60"
                    android:progress="15" />

                <TextView
                    android:id="@+id/tvToleranciaValor"
                    style="@style/BodyText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="15 minutos de tolerancia"
                    android:gravity="center"
                    android:layout_marginTop="8dp"
                    android:textStyle="bold"
                    android:textColor="@color/primary_color" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Sección Límite de Tardanzas -->
        <androidx.cardview.widget.CardView
            style="@style/ModernCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    style="@style/SubtitleText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="📊 Límite de Tardanzas"
                    android:drawableStart="@drawable/ic_warning"
                    android:drawablePadding="8dp" />

                <TextView
                    style="@style/SecondaryText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Número máximo de tardanzas permitidas por mes"
                    android:layout_marginBottom="16dp" />

                <SeekBar
                    android:id="@+id/seekBarLimite"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="10"
                    android:progress="3" />

                <TextView
                    android:id="@+id/tvLimiteValor"
                    style="@style/BodyText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="3 tardanzas máximo por mes"
                    android:gravity="center"
                    android:layout_marginTop="8dp"
                    android:textStyle="bold"
                    android:textColor="@color/warning_color" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Sección Opciones -->
        <androidx.cardview.widget.CardView
            style="@style/ModernCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    style="@style/SubtitleText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="🔧 Opciones Avanzadas"
                    android:layout_marginBottom="16dp" />

                <!-- Contar tardanzas -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            style="@style/BodyText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Contar tardanzas"
                            android:textStyle="bold" />

                        <TextView
                            style="@style/SecondaryText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Llevar registro del número de tardanzas por empleado" />

                    </LinearLayout>

                    <Switch
                        android:id="@+id/switchContarTardanzas"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true" />

                </LinearLayout>

                <!-- Notificar tardanzas -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            style="@style/BodyText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Notificar límites"
                            android:textStyle="bold" />

                        <TextView
                            style="@style/SecondaryText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Mostrar alertas cuando se acerque al límite de tardanzas" />

                    </LinearLayout>

                    <Switch
                        android:id="@+id/switchNotificarTardanzas"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true" />

                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Botones de acción -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="16dp">

            <Button
                android:id="@+id/btnGuardarConfiguracion"
                style="@style/PrimaryButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="💾 Guardar Configuración"
                android:drawableStart="@drawable/ic_save"
                android:drawablePadding="8dp" />

            <Button
                android:id="@+id/btnVerEstadisticas"
                style="@style/SecondaryButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="📊 Ver Estadísticas de Tardanzas"
                android:drawableStart="@drawable/ic_chart"
                android:drawablePadding="8dp" />

            <Button
                android:id="@+id/btnRestaurarDefecto"
                style="@style/OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="🔄 Restaurar por Defecto"
                android:drawableStart="@drawable/ic_restore"
                android:drawablePadding="8dp" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>