<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_color"
    android:padding="16dp">

    <!-- Header elegante -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/elegant_card_background"
        android:padding="20dp"
        android:layout_marginBottom="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="📊 Reportes de Asistencia"
            style="@style/SoftTitle" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <Button
                android:id="@+id/btnEnviar"
                style="@style/SoftPrimaryButton"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:text="📤 Enviar"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btnLimpiarDatos"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:text="🗑️ Limpiar Datos"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:background="@drawable/button_secondary_selector"
                android:layout_marginStart="8dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <Button
                android:id="@+id/btnEnvioAutomatico"
                style="@style/SoftPrimaryButton"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:text="⏰ Envío Automático"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btnConfiguracionEmail"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:text="⚙️ Configurar Email"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:background="@drawable/button_secondary_selector"
                android:layout_marginStart="8dp" />

        </LinearLayout>

    </LinearLayout>





    <!-- Título de registros -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="📋 Registros de Asistencia"
        style="@style/SubtitleText"
        android:layout_marginBottom="8dp" />

    <!-- Lista de reportes con scroll -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/registrosList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp" />

    </ScrollView>

</LinearLayout>