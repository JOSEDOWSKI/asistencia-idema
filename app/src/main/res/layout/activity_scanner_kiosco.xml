<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black">

    <!-- Scanner View con C츼MARA FRONTAL -->
    <com.journeyapps.barcodescanner.DecoratedBarcodeView
        android:id="@+id/barcode_scanner"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Header Information -->
    <LinearLayout
        android:id="@+id/header_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="#2E7D32"
        android:orientation="vertical"
        android:padding="16dp"
        android:elevation="4dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="游님 MODO KIOSCO - Control de Asistencias"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_proximo_evento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Acerque su c칩digo QR a la c치mara frontal"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/tv_empleado_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Esperando escaneo..."
            android:textColor="#E0FFFFFF"
            android:textSize="14sp"
            android:layout_marginTop="2dp" />

    </LinearLayout>

    <!-- Scanner Overlay m치s grande para kiosco -->
    <View
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_centerInParent="true"
        android:background="@drawable/scanner_overlay" />

    <!-- Progress Bar -->
    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"
        android:indeterminateTint="@color/promesa_green" />



    <!-- Bot칩n de linterna OCULTO para kiosco -->
    <ImageButton
        android:id="@+id/btn_linterna"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:background="@drawable/button_primary_selector"
        android:src="@drawable/ic_flash_off"
        android:contentDescription="Linterna no disponible en c치mara frontal"
        android:visibility="gone" />

</RelativeLayout>