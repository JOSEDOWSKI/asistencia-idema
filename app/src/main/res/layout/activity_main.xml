<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center"
    android:background="@color/background_color">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginBottom="48dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="📱"
            android:textSize="48sp"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Control de Asistencias"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/promesa_dark"
            android:gravity="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Desarrollado por Promesa"
            style="@style/HighContrastSecondaryText"
            android:layout_marginTop="8dp" />

    </LinearLayout>

    <!-- Main Actions -->
    <androidx.cardview.widget.CardView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <Button
                android:id="@+id/btnScanner"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:text="📱 Escanear Asistencia"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:background="@drawable/button_primary_selector"
                android:layout_marginBottom="16dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Detección automática del próximo evento\n• Soporte para QR, DNI (Code 39) y Code128\n• Cálculo automático de tardanzas y recuperaciones"
                android:textSize="12sp"
                android:textColor="@color/text_secondary"
                android:lineSpacingExtra="2dp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Management Actions -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnGestionEmpleados"
            style="@style/MainSecondaryButton"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="👥 Gestión de Empleados"
            android:textSize="16sp"
            android:layout_marginBottom="12dp" />

        <Button
            android:id="@+id/btnReportes"
            style="@style/MainSecondaryButton"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="📊 Reportes"
            android:textSize="16sp"
            android:layout_marginBottom="12dp" />

        <Button
            android:id="@+id/btnConfiguracion"
            style="@style/MainSecondaryButton"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="⚙️ Configuración del Sistema"
            android:textSize="16sp" />

    </LinearLayout>

    <!-- Footer -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="v3.0"
        android:textSize="12sp"
        android:textColor="@color/text_tertiary"
        android:gravity="center"
        android:layout_marginTop="32dp" />

</LinearLayout>