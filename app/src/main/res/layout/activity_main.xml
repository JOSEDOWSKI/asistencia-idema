<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sistema de Asistencia"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="48dp"
        android:textColor="@color/primary_color" />

    <Button
        android:id="@+id/btnRegistrarEntrada"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="📥 Registrar Entrada"
        android:textSize="18sp"
        android:layout_marginBottom="8dp"
        android:padding="16dp"
        android:backgroundTint="@android:color/holo_green_dark" />

    <Button
        android:id="@+id/btnRegistrarSalida"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="📤 Registrar Salida"
        android:textSize="18sp"
        android:layout_marginBottom="16dp"
        android:padding="16dp"
        android:backgroundTint="@android:color/holo_orange_dark" />

    <Button
        android:id="@+id/btnGestionPersonal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Gestión de Personal"
        android:textSize="18sp"
        android:layout_marginBottom="16dp"
        android:padding="16dp" />

    <Button
        android:id="@+id/btnReportes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Reportes y Exportar"
        android:textSize="18sp"
        android:layout_marginBottom="16dp"
        android:padding="16dp" />

    <Button
        android:id="@+id/btnConfiguracion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="⚙️ Configuración"
        android:textSize="18sp"
        android:padding="16dp"
        android:backgroundTint="@color/secondary_color" />

</LinearLayout>